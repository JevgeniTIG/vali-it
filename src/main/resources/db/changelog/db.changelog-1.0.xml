<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet  author="Jevgeni"  id="2020-09-04">
        <createTable tableName="customer">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable  tableName="accounts">
            <column  name="id"  type="BIGINT" autoIncrement="true">
                <constraints  nullable="false"  primaryKey="true"/>
            </column>
            <column  name="account_nr"  type="TEXT">
                <constraints  nullable="false" unique="true"/>
            </column>
            <column  name="balance"  type="NUMERIC">
                <constraints  nullable="true"/>
            </column>
            <column  name="customer_id"  type="BIGINT">
                <constraints  nullable="false" unique="false" foreignKeyName="fk_accounts_customer" references="customer(id)"/>
            </column>
        </createTable>


    </changeSet>

    <changeSet id="2020-09-05" author="Jevgeni">
        <createTable  tableName="transactions">
            <column  name="id"  type="BIGINT" autoIncrement="true">
                <constraints  nullable="false"  primaryKey="true"/>
            </column>
            <column name="account_id" type="BIGINT">
                <constraints foreignKeyName="fk_transactions_accounts" references="accounts(id)"/>
            </column>
            <column  name="account"  type="TEXT">
                <constraints  nullable="false" unique="false"/>
            </column>

            <column  name="deposit"  type="numeric">
                <constraints  nullable="true" unique="false"/>
            </column>
            <column  name="withdraw"  type="numeric">
                <constraints  nullable="true" unique="false"/>
            </column>
            <column  name="balance"  type="numeric">
            </column>

        </createTable>
    </changeSet>


</databaseChangeLog>